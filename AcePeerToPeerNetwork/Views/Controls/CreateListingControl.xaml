<UserControl x:Class="AcePeerToPeerNetwork.Views.Controls.CreateListingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcePeerToPeerNetwork.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Title" HorizontalAlignment="Center"/>
            <TextBox Margin="50" Width="300" Name="txtTitle"/>
            <Label Content="Body" HorizontalAlignment="Center"/>
            <TextBox Margin="50, 10, 50, 100" Height="200" Name="txtBody"/>
        </StackPanel>
        <Button Content="Create" Name="btnCreate" Grid.Row="1" Width="250" Margin="0, 0, 0, 10" Click="btnCreate_Click"/>
    </Grid>
</UserControl>
