<UserControl x:Class="AcePeerToPeerNetwork.Views.Controls.ListingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcePeerToPeerNetwork.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel
            Name="screenListing"
            Background="Red">
        <Label 
                Name="lblListingTitle"
                Content="{Binding Title}"
                HorizontalContentAlignment="Center"
                Background="Gray"
                />
        <Label 
                Name="lblListingMessage"
                Content="{Binding Message}"
                HorizontalContentAlignment="Center"
                Background="White"
                />
        <Button 
            Name="btnListingContact"
            Background="Gray"
            Content="Contact"
            Click="btnListingContact_Click"
                    />
    </StackPanel>
</UserControl>
