            <controls:LoginControl Visibility="Hidden" x:Name="controlLogin"/>
            <controls:RegisterControl Visibility="Hidden" x:Name="controlRegister"/>
            <controls:ConversationControl Visibility="Visible" x:Name="controlConversation" IsEnabled="False"/>
